    <title>ArtJunks</title>
    
    <link rel="stylesheet" href="./artist.css">
    <link rel="icon" href="../asset/icons/logo.jpeg" type="image/x-icon">
</head>
<body>
    <div id="header-part">
        <a id="logo" href="/">ARTJUNKS</a>
        <div id="desktop-options">
            <a class="desktop-option" href="/">Home</a>
            <a class="desktop-option" href="/about">About</a>
            <a class="desktop-option" href="/artists">Artists</a>
            <a class="desktop-option" href="/career">Careers</a>
            <a class="desktop-option" href="/">News</a>
            <a class="desktop-option" href="/company">Company</a>
            <button class="button" id="get-started-button" onclick="location.href = '/signup';"><span>Get Started</span></button>
        </div>
        <div id="mobile-tablet-option" class="dropdown">
            <div class="mt-option"></div>
            <div class="mt-option"></div>
            <div class="mt-option"></div>
            <div class="dropdown-content">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/artists">Artists</a>
                <a href="/career">Careers</a>
                <a href="/">News</a>
                <a href="/company">Company</a>
            </div>
        </div>
    </div>

    <h1>Artists Gallery</h1>
    <div class="artists-grid" id="artists-container">
        {{#artists}}
        <div class="artist-card">
            <img src="{{image}}" alt="{{name}}" class="artist-image">
            <div class="artist-info">
                <h2 class="artist-name">{{name}}</h2>
                <p class="artist-genre">{{genre}}</p>
                <p class="artist-description">{{description}}</p>
            </div>
        </div>
        {{/artists}}
    </div>

    <footer>
            <div class="footer-component">2024 Â© Artjunks</div>
            <a href="https://github.com/ethan17225/Blog-Website-Application" class="footer-component" target="_blank">GitHub</a>
            <a href="https://www.linkedin.com/in/ethan17225/" class="footer-component" target="_blank">Linkedin</a>
    </footer>

    <script>
        function displayArtists(artistsToDisplay) {
            const rendered = Mustache.render(template, { artists: artistsToDisplay });
            artistsContainer.innerHTML = rendered;
        }

        function filterArtists(searchTerm) {
            return artists.filter(artist => 
                artist.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
                artist.genre.toLowerCase().includes(searchTerm.toLowerCase())
            );
        }

        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value;
            const filteredArtists = filterArtists(searchTerm);
            displayArtists(filteredArtists);
        });
    </script>
</body>
</html>