    <script>
        function createSpark() {
            const spark = document.createElement('div');
            spark.classList.add('creative-spark');
            spark.style.left = Math.random() * window.innerWidth + 'px';
            spark.style.top = Math.random() * window.innerHeight + 'px';
            spark.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
            spark.style.width = '5px';
            spark.style.height = '5px';
            spark.style.borderRadius = '50%';
            spark.style.opacity = '0';
            document.body.appendChild(spark);

            let scale = 0;
            let opacity = 0;
            const animate = () => {
                scale += 0.03;
                opacity = Math.sin(scale * Math.PI);
                spark.style.transform = `scale(${1 + scale})`;
                spark.style.opacity = opacity;
                if (opacity > 0) {
                    requestAnimationFrame(animate);
                } else {
                    spark.remove();
                }
            };
            animate();
        }

        setInterval(createSpark, 300);

        function toggleJobDetails(button) {
            const details = button.nextElementSibling;
            if (details.style.display === "none" || details.style.display === "") {
                details.style.display = "block";
                button.textContent = "Hide Details";
            } else {
                details.style.display = "none";
                button.textContent = "View Details";
            }
        }

        document.getElementById('contact-form').addEventListener('submit', function(e) {
